<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/social_media"
        android:label="@string/app_name"
        android:roundIcon="@drawable/social_media"
        android:supportsRtl="true"
        android:theme="@style/Theme.SocialMediaApp"
        tools:targetApi="31">
        <activity
            android:name=".view.ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.SocialMediaApp" />
        <activity
            android:name=".view.FollowersActivity"
            android:exported="false"
            android:label="@string/title_activity_followers"
            android:theme="@style/Theme.SocialMediaApp" />
        <activity
            android:name=".view.FeedActivity"
            android:exported="false"
            android:label="@string/title_activity_feed"
            android:theme="@style/Theme.SocialMediaApp" />
        <activity
            android:name=".view.ForgotPasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_forgot_password"
            android:theme="@style/Theme.SocialMediaApp" />
        <activity
            android:name=".view.SignupActivity"
            android:exported="false"
            android:label="@string/title_activity_signup"
            android:theme="@style/Theme.SocialMediaApp" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.SocialMediaApp" />
        <activity
            android:name=".view.SecondIntroScreen"
            android:exported="false"
            android:label="@string/title_activity_second_intro_screen"
            android:theme="@style/Theme.SocialMediaApp" />
        <activity
            android:name=".view.IntroductionActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SocialMediaApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>